<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Demo</title>

    @Html.Partial("Components/_StylesHeader")
    @Html.Partial("Components/_ScriptsHeader")
</head>

<body class="@(ViewContext.RouteData.Values["controller"].ToString().ToLower())">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @RenderBody()
            </div>
        </div>
    </div>
    @Html.Partial("Components/_ScriptsFooter")
    @RenderSection("scripts", required: false)
</body>
</html>