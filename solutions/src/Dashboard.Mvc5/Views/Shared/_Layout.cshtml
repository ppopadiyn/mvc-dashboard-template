<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Demo</title>
    @Html.Partial("Components/_StylesHeader")
    @Html.Partial("Components/_ScriptsHeader")

</head>
<body class="@(ViewContext.RouteData.Values["controller"].ToString().ToLower())">
    @Html.Partial("Components/_Loader")
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action(ActionNames.Index, ControllerNames.Home)">Demo</a>
            </div>

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Hello {Username}! <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action(ActionNames.LogOff, ControllerNames.Account)"><i class="fa fa-sign-out"></i> Sign Out</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <div class="navbar-default sidebar">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action(ActionNames.Index, ControllerNames.Home)"
                               class="@Html.IsActive(ControllerNames.Home, ActionNames.Index)">
                                <i class="fa fa-home" aria-hidden="true"></i>
                                Dashboard
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action(ActionNames.Index, ControllerNames.Reporting)"
                               class="@Html.IsActive(ControllerNames.Reporting, ActionNames.Index)">
                                <i class="fa fa-line-chart" aria-hidden="true"></i>
                                Reporting
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("Components/_ScriptsFooter")
    @RenderSection("scripts", required: false)
</body>
</html>
