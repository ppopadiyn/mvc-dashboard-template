@using System.Threading.Tasks
@using Demo.Core
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Demo</title>

    @{ await Html.RenderPartialAsync("Components/_StylesHeader");}
    @{ await Html.RenderPartialAsync("Components/_ScriptsHeader");}
</head>
<body class="@(ViewContext.RouteData.Values["controller"].ToString().ToLower())">
    @Html.Partial("Components/_Loader")
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-action="@ActionNames.Index" asp-controller="@ControllerNames.Home">Demo</a>
            </div>

            <div class="navbar-default sidebar">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a asp-action="@ActionNames.Index" asp-controller="@ControllerNames.Home"
                               class="@Html.IsActive(ControllerNames.Home, ActionNames.Index)">
                                <i class="fa fa-home" aria-hidden="true"></i>
                                Home
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @{ await Html.RenderPartialAsync("Components/_ScriptsFooter");}
    @RenderSection("scripts", required: false)
</body>
</html>
